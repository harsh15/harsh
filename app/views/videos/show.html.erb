    <!--=== Content Part ===-->
    <div class="container content">
      <div class="row blog-page blog-item">
            <!-- Left Sidebar -->
          <div class="col-md-8 md-margin-bottom-60">
                <!--Blog Post-->
                <div class="blog margin-bottom-40">
                    <h2><%= @video.title -%></h2>
                    <div class="blog-post-tags">
                        <ul class="list-unstyled list-inline blog-info">
                            <li><i class="fa fa-calendar"></i> <%= @video.publish_date.strftime("%B %d, %Y") -%></li>
                            <li><i class="fa fa-comments"></i> <a href="#comments">Comments</a></li>
                        </ul>
                    </div>
                    <%= render partial: "common/social_share" -%>
                    <hr>
                    <p><%= @video.description.html_safe %></p>
                    <%= render partial: @video.source, locals: {video: @video} -%>
                </div>
                <!--End Blog Post-->

              <hr>
                <%= render partial: "common/social_share" -%>
              <hr>
              <!-- Recent Comments -->
              <div id="comments" class="fb-comments" data-href="<%= video_url(@video) -%>" data-numposts="3" data-colorscheme="light"></div>

              <hr>

            </div>
            <!-- End Left Sidebar -->

            <!-- Right Sidebar -->
            <div class="col-md-4 magazine-page">
              <%= render "common/right_section" -%>
            </div>
            <!-- End Right Sidebar -->
        </div><!--/row-->
    </div><!--/container-->
    <!--=== End Content Part ===-->
