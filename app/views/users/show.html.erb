<div class="container content">
  <table>
  
  	<tr>
      <td colspan=2><%= link_to("Edit Profile", edit_user_url(current_user)) if authentic_user? -%></td>		
  	</tr>

  </table>
  <br>
  <table>
  	<tr>
      <td>Name</td>
      <td><%= @user.name -%></td>		
  	</tr>
  	<tr>
      <td>Email</td>
      <td><%= @user.email -%></td>		
  	</tr>
  	<tr>
      <td>Phone</td>
      <td><%= @user.phone -%></td>		
  	</tr>
  	<tr>
      <td>Gender</td>
      <td><%= @user.gender -%></td>		
  	</tr>
  	<tr>
      <td>Date Of Birth</td>
      <td><%= @user.date_of_birth.strftime("%d %B %Y") -%></td>		
  	</tr>
  	<tr>
      <td>Location</td>
      <td><%= @user.location -%></td>		
  	</tr>
    <tr>
      <td>Prefered Language  &nbsp;&nbsp;&nbsp;</td>
      <td><%= @user.prefered_language -%></td>   
    </tr>    
  	<tr>
      <td>Interested In</td>
      <td><%= @user.interested_in -%></td>		
  	</tr>

  </table>

</div>